mkdir -p ~/Abathur
cat > app.py << EOF
from flask import Flask
import os
import socket

app = Flask(__name__)

@app.route("/")
def hello():
    return "<h1>Hello World ! </h1>"

if __name__ == "__main__":
    app.run(host='0.0.0.0', port=3000)
EOF

docker-machine ssh Char "mkdir -p Abathur"
docker-machine scp app.py Char:/home/docker/Abathur/app.py

docker run -d -t \
    --name Abathur \
    --volume ~/Abathur:/root \
    -p 3000:3000 \
    python:2-slim

docker exec Abathur pip install flask

docker exec Abathur \
        python2 /root/app.py
